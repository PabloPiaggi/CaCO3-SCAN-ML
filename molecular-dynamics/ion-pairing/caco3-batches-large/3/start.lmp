echo both

include		in.temp
include		in.pressure
include		in.seed
units		metal
atom_style	atomic
include		in.box
include 	in.setup

include         in.dump

timer           timeout 143:55:00 every 1000

fix             thermo_print all print 1000 "$(step) $(enthalpy) $(vol)" file thermo.txt screen no title "#step enthalpy vol"
fix		1 all plumed plumedfile plumed.dat outfile plumed.out
fix             2 all nve #ph iso ${pressure} ${pressure} ${pressureDamp}
fix             3 all temp/csvr ${temperature} ${temperature} ${tempDamp} ${seed}
fix             4 all momentum 10000 linear 1 1 1 rescale

velocity 	all create ${temperature} ${seed} dist gaussian

run             40000000 upto # 20. ns

write_data	data.final

write_restart   restart.lmp
